<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:paddingBottom="16dp"
                                             android:paddingTop="5dp">

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/ic_man"
            android:id="@+id/icon" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
    />
    <View
            android:layout_width="wrap_content"
            android:background="@color/separator"
            android:layout_height="1dp"
            android:id="@+id/separator_1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Notifications"
            android:gravity="center"
            android:drawableStart="@drawable/ic_outline_notifications_active_24px"
            android:drawablePadding="32dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/notifications" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/separator_1" android:layout_marginTop="24dp"/>

    <TextView
            android:text="History"
            android:gravity="center"
            android:drawableStart="@drawable/ic_outline_history_24px"
            android:drawablePadding="32dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/history" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/notifications" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Settings"
            android:gravity="center"
            android:drawableStart="@drawable/ic_outline_settings_24px"
            android:drawablePadding="32dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/settings" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/history" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Help &amp; Feedback"
            android:gravity="center"
            android:drawableStart="@drawable/ic_outline_help_outline_24px"
            android:drawablePadding="32dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/help" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/settings" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <View
            android:layout_width="wrap_content"
            android:background="@color/separator"
            android:layout_height="1dp"
            android:id="@+id/separator_2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/help"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Privacy Policy &#183; Terms of Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/po" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_2"/>
    <TextView
            android:text="Elon Musk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/icon" app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="elon@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email" app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
</android.support.constraint.ConstraintLayout>